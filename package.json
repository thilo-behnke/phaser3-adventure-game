{
    "name": "phaser3-typescript-project-template",
    "version": "1.0.1",
    "description": "A Phaser 3 Project Template using Rollup and TypeScript",
    "main": "src/index.ts",
    "scripts": {
        "dev": "webpack --mode development && webpack-dev-server --mode development --hot",
        "build": "webpack --mode production && webpack-dev-server --mode production",
        "prettier": "prettier --write ./src/**/*.ts",
        "lint": "tsc --noEmit && eslint 'src/**/*.ts' --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/photonstorm/phaser3-typescript-project-template.git"
    },
    "author": "Richard Davey <rich@photonstorm.com> (http://www.photonstorm.com)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/photonstorm/phaser3-typescript-project-template/issues"
    },
    "homepage": "https://github.com/photonstorm/phaser3-typescript-project-template#readme",
    "dependencies": {
        "@types/lodash": "^4.14.149",
        "lodash": "^4.17.15",
        "phaser": "^3.20.1",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^6.5.3",
        "tsyringe": "^4.0.1",
        "typescript": "^3.7.2",
        "uuid": "^3.3.3"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.11.0",
        "@typescript-eslint/parser": "^2.11.0",
        "eslint": "^6.7.2",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-prettier": "^3.1.1",
        "expose-loader": "^0.7.5",
        "file-loader": "^2.0.0",
        "husky": "^3.1.0",
        "json-loader": "^0.5.7",
        "lint-staged": "^9.5.0",
        "prettier": "^1.19.1",
        "raw-loader": "^0.5.1",
        "ts-loader": "^5.2.2",
        "typescript": "^3.1.3",
        "webpack": "^4.22.0",
        "webpack-cli": "^3.1.2",
        "webpack-dev-server": "^3.1.9"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.ts": [
            "prettier --write && eslint --fix",
            "git add"
        ]
    }
}
